{
  "users": [
    "deployer"
  ],

  "nginx": {
    "version"                       : "1.2.4",
    "worker_processes"              : 1,
    "worker_connections"            : 1024,
    "user"                          : "www-data",
    "server_names_hash_bucket_size" : 64,
    "keepalive_timeout"             : 30,
    "default_site_enabled"          : false,

    "modules": [
      "http_stub_status_module",
      "http_ssl_module",
      "http_gzip_static_module"
    ],

    "gzip_types": [
      "text/plain",
      "text/html",
      "text/css",
      "text/xml",
      "text/javascript",
      "application/json",
      "application/x-javascript",
      "application/xml",
      "application/xml+rss"
    ]
  },

  "mysql": {
    "bind_address": "localhost",
    "server_root_password": "password",
    "server_repl_password": "password",
    "server_debian_password": "password"
  },

  "postgresql": {
    "version": "9.3",
    "password": {
      "postgres": "password"
    },
    "config": {
      "ssl": "off"
    }
  },

  "jolicode-php": {
    "ext-fpm": {
      "listen": "127.0.0.1:9000"
    }
  },

  "newrelic": {
    "server_monitoring": {
      "license": "your-key"
    },
    "application_monitoring": {
      "license": "your-key"
    }
  },

  "run_list": [
    "recipe[git]",
    "recipe[lxmx_hostname]",
    "recipe[locale]",
    "recipe[user::data_bag]",
    "recipe[nginx::source]",
    "recipe[mysql::client]",
    "recipe[mysql::server]",
    "recipe[database::mysql]",
    "recipe[mysqldatabases]",
    "recipe[imagemagick]",
    "recipe[openssh]",
    "recipe[jolicode-php]",
    "recipe[jolicode-php::composer]",
    "recipe[jolicode-php::ext-apc]",
    "recipe[jolicode-php::ext-curl]",
    "recipe[jolicode-php::ext-fpm]",
    "recipe[jolicode-php::ext-gd]",
    "recipe[jolicode-php::ext-imagick]",
    "recipe[jolicode-php::ext-intl]",
    "recipe[jolicode-php::ext-mbstring]",
    "recipe[jolicode-php::ext-mcrypt]",
    "recipe[jolicode-php::ext-mysql]",
    "recipe[jolicode-php::ext-pdo]",
    "recipe[jolicode-php::ext-twig]",
    "recipe[postgresql::client]",
    "recipe[postgresql::server]",
    "recipe[postgresql::ruby]",
    "recipe[newrelic]",
    "recipe[wkhtmltopdf]",
    "recipe[wkhtmltopdf::wkhtmltoimage_binary]",
    "recipe[wkhtmltopdf::wkhtmltopdf_binary]"
  ]
}